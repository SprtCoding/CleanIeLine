<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white_smoke"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Placed"
                android:fontFamily="@font/garet_heavy"
                android:textColor="@color/dark_late_gray"
                android:textSize="19sp"/>

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                app:lottie_rawRes="@raw/cart_anim"
                app:lottie_autoPlay="true"
                app:lottie_loop="false"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:textAlignment="center"
                android:text="Transaction Successfully!"
                android:fontFamily="@font/garet_heavy"
                android:textColor="@color/primary_color"
                android:textSize="22sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAlignment="center"
                android:text="Thanks for Placing the Order."
                android:fontFamily="@font/garet_book"
                android:textColor="@color/dark_late_gray"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/id_numbers"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAlignment="center"
                android:text="#sd2345df_5"
                android:fontFamily="@font/garet_heavy"
                android:textColor="@color/dark_late_gray"
                android:textSize="18sp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="View Order Details"
                android:fontFamily="@font/garet_heavy"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/primary_color"
                android:id="@+id/view_details"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>