<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".Admin.Fragments.TabFragments.OrderDetails.AdminOrderDetails">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Details"
                android:fontFamily="@font/garet_heavy"
                android:textColor="@color/dark_late_gray"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/close_btn"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x"
                android:fontFamily="@font/garet_heavy"
                android:textColor="@color/dark_late_gray"
                android:textSize="22sp"/>

            <LinearLayout
                android:layout_below="@id/txt"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/dark_late_gray"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/services_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/garet_heavy"
                    android:text="Order Status"
                    android:textColor="@color/dark_late_gray"
                    android:textSize="18sp" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/garet_book"
                    android:text="@string/wash_dry"
                    android:textColor="@color/dark_late_gray"
                    android:textSize="15sp" />

                <EditText
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/scale_18"
                    android:drawableTint="@color/dark_late_gray"
                    android:drawablePadding="15dp"
                    android:background="@drawable/round_back_dark_blue5_15"
                    android:id="@+id/wash_dry_kg"
                    android:inputType="numberDecimal"
                    android:padding="12dp"
                    android:fontFamily="@font/garet_book"
                    android:enabled="false"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/garet_book"
                    android:text="@string/bedsheet_towels_kg"
                    android:textColor="@color/dark_late_gray"
                    android:textSize="15sp" />

                <EditText
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/scale_18"
                    android:drawableTint="@color/dark_late_gray"
                    android:drawablePadding="15dp"
                    android:background="@drawable/round_back_dark_blue5_15"
                    android:id="@+id/bed_linens_kg"
                    android:inputType="numberDecimal"
                    android:padding="12dp"
                    android:fontFamily="@font/garet_book"
                    android:enabled="false"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/garet_book"
                    android:text="Comforter/Bulky Blanket kg"
                    android:textColor="@color/dark_late_gray"
                    android:textSize="15sp" />

                <EditText
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/scale_18"
                    android:drawableTint="@color/dark_late_gray"
                    android:drawablePadding="15dp"
                    android:background="@drawable/round_back_dark_blue5_15"
                    android:id="@+id/comforter_kg"
                    android:inputType="numberDecimal"
                    android:padding="12dp"
                    android:fontFamily="@font/garet_book"
                    android:enabled="false"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/garet_heavy"
                    android:text="Other Garment/s"
                    android:textColor="@color/dark_late_gray"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/customer_provided_tv"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:background="@drawable/round_back_dark_blue5_15"
                    android:text="Customer Provided"
                    android:textColor="@color/dark_late_gray"
                    android:textSize="13sp"
                    android:drawablePadding="15dp"
                    android:fontFamily="@font/garet_book"/>

                <TextView
                    android:id="@+id/detergent_tv"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:background="@drawable/round_back_dark_blue5_15"
                    android:text="Detergent"
                    android:textColor="@color/dark_late_gray"
                    android:textSize="13sp"
                    android:drawablePadding="15dp"
                    android:fontFamily="@font/garet_book"/>

                <TextView
                    android:id="@+id/fabcon_tv"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:background="@drawable/round_back_dark_blue5_15"
                    android:text="Fabcon"
                    android:textColor="@color/dark_late_gray"
                    android:textSize="13sp"
                    android:drawablePadding="15dp"
                    android:fontFamily="@font/garet_book"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:gravity="end">

                    <TextView
                        android:id="@+id/edit_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="15dp"
                        android:text="Edit"
                        android:layout_marginTop="5dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:background="@drawable/status_bg"
                        android:fontFamily="@font/garet_heavy"
                        android:textColor="@color/white_smoke"
                        android:textSize="12sp"
                        android:gravity="center"
                        app:drawableStartCompat="@drawable/pen_square_18"
                        app:drawableTint="@color/white_smoke" />

                    <TextView
                        android:id="@+id/save_btn"
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="15dp"
                        android:text="Save"
                        android:layout_marginTop="5dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:gravity="center"
                        android:background="@drawable/status_bg"
                        android:fontFamily="@font/garet_heavy"
                        android:textColor="@color/white_smoke"
                        android:textSize="12sp"
                        app:drawableStartCompat="@drawable/disk_18"
                        app:drawableTint="@color/white_smoke" />

                </LinearLayout>

                <View
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/dark_late_gray"/>

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/status_ll"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/garet_heavy"
                            android:text="Order Status"
                            android:textColor="@color/dark_late_gray"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/order_ID"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/garet_book"
                            android:text="Order Status"
                            android:textColor="@color/dark_late_gray"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/status_ll"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TimeDate"
                            android:fontFamily="@font/garet_book"
                            android:textColor="@color/dark_late_gray"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/order_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Order Status"
                            android:layout_marginTop="5dp"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:background="@drawable/status_bg"
                            android:fontFamily="@font/garet_heavy"
                            android:textColor="@color/white_smoke"
                            android:textSize="12sp"/>

                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/dark_late_gray"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pickup Address"
                    android:textColor="@color/dark_late_gray"
                    android:textSize="18sp"
                    android:fontFamily="@font/garet_book"/>

                <TextView
                    android:id="@+id/pickup_address_tv"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:background="@drawable/round_back_dark_blue5_15"
                    android:text="Pickup Address"
                    android:textColor="@color/dark_late_gray"
                    android:textSize="13sp"
                    app:drawableStartCompat="@drawable/marker_18"
                    app:drawableTint="@color/dark_late_gray"
                    android:drawablePadding="15dp"
                    android:fontFamily="@font/garet_book"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pickup Time"
                    android:textColor="@color/dark_late_gray"
                    android:textSize="18sp"
                    android:fontFamily="@font/garet_book"/>

                <TextView
                    android:id="@+id/pickup_time_tv"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:background="@drawable/round_back_dark_blue5_15"
                    android:text="Pickup Time"
                    android:textColor="@color/dark_late_gray"
                    android:textSize="13sp"
                    app:drawableStartCompat="@drawable/clock_18"
                    app:drawableTint="@color/dark_late_gray"
                    android:drawablePadding="15dp"
                    android:fontFamily="@font/garet_book"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivery Instructions"
                    android:textColor="@color/dark_late_gray"
                    android:textSize="18sp"
                    android:fontFamily="@font/garet_book"/>

                <EditText
                    android:layout_marginTop="10dp"
                    android:id="@+id/delivery_instructions_tv"
                    android:padding="15dp"
                    android:background="@drawable/round_back_dark_blue5_15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="15dp"
                    android:inputType="textMultiLine"
                    android:lines="5"
                    android:gravity="top"
                    android:enabled="false"
                    android:hint="Delivery Instructions"
                    android:textColor="@color/dark_late_gray"
                    android:textSize="13sp"
                    android:fontFamily="@font/garet_book" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivery Address"
                    android:textColor="@color/dark_late_gray"
                    android:textSize="18sp"
                    android:fontFamily="@font/garet_book"/>

                <TextView
                    android:id="@+id/delivery_address_tv"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:background="@drawable/round_back_dark_blue5_15"
                    android:text="Delivery Address"
                    android:textColor="@color/dark_late_gray"
                    android:textSize="13sp"
                    app:drawableStartCompat="@drawable/marker_18"
                    app:drawableTint="@color/dark_late_gray"
                    android:drawablePadding="15dp"
                    android:fontFamily="@font/garet_book"/>

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment Summary"
                    android:textSize="28sp"
                    android:textColor="@color/dark_late_gray"
                    android:fontFamily="@font/garet_heavy"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/dark_late_gray"
                    android:layout_marginTop="10dp"/>

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:background="@drawable/round_back_dark_blue5_15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:padding="15dp"
                        android:background="@drawable/round_back_dark_blue5_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="15dp"
                        android:text="Sub Total"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/dark_late_gray"
                        android:textSize="13sp"
                        android:fontFamily="@font/garet_book" />

                    <TextView
                        android:id="@+id/subTotal"
                        android:padding="15dp"
                        android:background="@drawable/round_back_dark_blue5_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="15dp"
                        android:text="0"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/dark_late_gray"
                        android:textSize="13sp"
                        android:fontFamily="@font/garet_book" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:background="@drawable/round_back_dark_blue5_15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:padding="15dp"
                        android:background="@drawable/round_back_dark_blue5_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="15dp"
                        android:text="Delivery Fee"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/dark_late_gray"
                        android:textSize="13sp"
                        android:fontFamily="@font/garet_book" />

                    <TextView
                        android:id="@+id/delivery_fee"
                        android:padding="15dp"
                        android:background="@drawable/round_back_dark_blue5_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="15dp"
                        android:text="0"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/dark_late_gray"
                        android:textSize="13sp"
                        android:fontFamily="@font/garet_book" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:background="@drawable/round_back_dark_blue5_15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:padding="15dp"
                        android:background="@drawable/round_back_dark_blue5_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="15dp"
                        android:text="Total"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/dark_late_gray"
                        android:textSize="13sp"
                        android:fontFamily="@font/garet_book" />

                    <TextView
                        android:id="@+id/total_payment"
                        android:padding="15dp"
                        android:background="@drawable/round_back_dark_blue5_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="15dp"
                        android:text="0"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/dark_late_gray"
                        android:textSize="13sp"
                        android:fontFamily="@font/garet_book" />

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>